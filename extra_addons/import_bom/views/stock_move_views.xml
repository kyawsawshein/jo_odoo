<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_request_mo_form" model="ir.ui.view">
        <field name="name">stock.move.operations.request_mo.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="inside" groups="mrp.group_mrp_manager">
                    <field name="mo_picking_type_id"/>
                    <label for="request_order_mo"/>
                    <div class="o_row">
                        <field name="request_order_mo"/>
                        <button name="request_mo" string="Generate MO" type="object" class="btn btn-primary"/>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>
