<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_brand_access" model="ir.ui.view">
        <field name="name">res.users.form.brand.access</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='access_rights']" position="inside">
                <group string="Brand Access">
                    <field name="brand_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <!-- <label for="group_brand_restricted_user"/>
                    <div class="text-muted">
                        Assign this user to the <b>Brand Restricted User</b> group to enforce brand-based visibility.
                    </div> -->
                </group>
            </xpath>
        </field>
    </record>
</odoo>
